# dmyTRUEk's US colemak custom keyboard layout
#
# src:
# https://github.com/swaywm/sway/wiki#load-a-modified-custom-xkb-keymap-xmodmap-equivalent
# https://git.sr.ht/~jman/dotfiles/tree/refs/heads/master/xkb/README.md
# https://www.charvolant.org/doug/xkb/html/node5.html
# <pkgs>/xkeyboard-config -> /etc/X11/xkb/symbols/us
# https://xkbcommon.org/doc/current/user-configuration.html#md_doc_2user-configuration

default partial alphanumeric_keys
xkb_symbols "basic" {
	include "us"
		name[Group1] = "English (Colemak) (by dmyTRUEk)";

	# qwertyuiop
	# key <AD01> { [ q, Q ] }; # q
	# key <AD02> { [ w, W ] }; # w
	key <AD03> { [ f, F ] }; # e
	key <AD04> { [ p, P ] }; # r
	key <AD05> { [ g, G ] }; # t
	key <AD06> { [ j, J ] }; # y
	key <AD07> { [ l, L ] }; # u
	key <AD08> { [ u, U ] }; # i
	key <AD09> { [ y, Y ] }; # o
	key <AD10> { [ semicolon, colon ] }; # p
	# key <AD11> { [ braceleft, braceleft ] }; # [
	# key <AD12> { [ bracketright, braceright ] }; # ]

	# asdfghjkl;'
	# key <AC01> { [ a, A ] }; # a
	key <AC02> { [ r, R ] }; # s
	key <AC03> { [ s, S ] }; # d
	key <AC04> { [ t, T ] }; # f
	key <AC05> { [ d, D ] }; # g
	# key <AC06> { [ h, H ] }; # h
	key <AC07> { [ n, N ] }; # j
	key <AC08> { [ e, E ] }; # k
	key <AC09> { [ i, I ] }; # l
	key <AC10> { [ o, O ] }; # ;
	# key <AC11> { [ apostrophe, quotedbl ] }; # '

	# zxcvbnm,./
	# key <AB01> { [ z, Z ] }; # z
	# key <AB02> { [ x, X ] }; # x
	# key <AB03> { [ c, C ] }; # c
	# key <AB04> { [ v, V ] }; # v
	# key <AB05> { [ b, B ] }; # b
	key <AB06> { [ k, K ] }; # n
	# key <AB07> { [ m, M ] }; # m
	# key <AB08> { [ comma, less ] }; # ,
	# key <AB09> { [ period, greater ] }; # .
	# key <AB10> { [ slash, question ] }; # /

	key <RALT> { [ BackSpace, none ] };
};
