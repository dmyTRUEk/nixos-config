# TODO
#set $wtype $(nix eval nixpkgs#wtype.outPath --raw)
#set $wtype $wtype/bin/wtype
set $wtype /nix/store/6iz5izzayyhb9q58wd9wankyhig54b0h-wtype-0.4/bin/wtype
#bindsym --release Alt_R       exec notify-send "$wtype"
$btrbindsym Alt_R       exec $wtype -k Backspace
$btrbindsym Shift+Alt_R exec $wtype -k Delete

# disable alt layouts:
bindsym $mod+Shift+5 input type:keyboard xkb_layout "en,ukr"

# enable Kuntem
bindsym $mod+5       input type:keyboard xkb_layout "en,ukr,en_kuntem_vz_mod"
#bindsym $mod+5       input type:keyboard xkb_layout "en,ukr,en_kuntem_vz_mod", input type:keyboard xkb_switch_layout 2

# enable Colekam
bindsym $mod+6       input type:keyboard xkb_layout "en,ukr,en_colekam"

# enable Colemak
bindsym $mod+7       input type:keyboard xkb_layout "en,ukr,en_colemak"

# enable Workman
bindsym $mod+8       input type:keyboard xkb_layout "en,ukr,en_workman"

bindsym $mod+Ctrl+F7       input type:keyboard xkb_layout "none"
bindsym $mod+Ctrl+Shift+F7 input type:keyboard xkb_layout "en,ukr"

$btrbindsym $mod+Ctrl+u exec sh $HOME/.config/home-manager/home/dotfiles/sway/scripts/langmap/eng_to_ukr.sh
$btrbindsym $mod+Ctrl+e exec sh $HOME/.config/home-manager/home/dotfiles/sway/scripts/langmap/ukr_to_eng.sh

bindsym $mod+Ctrl+Up exec \
	wtype -M ctrl -P x \
	&& sleep 0.1 \
	&& wl-paste \
	| python -c 'from fileinput import input as get_stdin; print("".join(get_stdin())[:-1].upper(),end="")' \
	| wl-copy \
	&& sleep 0.1 \
	&& wtype -M ctrl -P v

bindsym $mod+Ctrl+Down exec \
	wtype -M ctrl -P x \
	&& sleep 0.1 \
	&& wl-paste \
	| python -c 'from fileinput import input as get_stdin; print("".join(get_stdin())[:-1].lower(),end="")' \
	| wl-copy \
	&& sleep 0.1 \
	&& wtype -M ctrl -P v

